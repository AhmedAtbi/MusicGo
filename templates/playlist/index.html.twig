{% extends 'base.html.twig' %}

{% block title %}Playlist index{% endblock %}

{% block body %}
    <h1>Playlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for playlist in play %}
            <tr>
                
                <td>{{ playlist.nom }}</td>
                <td>
                    <a href="{{ path('playlist_show', {'id': playlist.id}) }}">show</a>
                    <a href="{{ path('playlist_edit', {'id': playlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                                              {% if is_granted('ROLE_USER') %}

    <a href="{{ path('playlist_new') }}">Create new</a>
    {% endif %}
{% endblock %}
