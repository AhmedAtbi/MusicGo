{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    

    <h1>Album index</h1>
<div class="container">
    <div class="row">
    <table class="table">

        <thead>
            <tr>
                <th>Nom</th>
                <th>Artiste</th>
                <th>Description</th>
                <th>Categorie</th>
                
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td><a href="{{ path('album_show', {'id': album.id}) }}">{{ album.nom }}</a></td>
              <td> <a href="{{ path('artiste_show', {'id': album.artiste.id}) }}"> {{ album.artiste }}</td></a>
                <td>{{ album.description|raw }}</td>
                <td><a href="{{ path('categorie_show', {'id': album.categorie.id}) }}">{{ album.categorie }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <hr>
            {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('album_new') }}">Create new</a>
    {% endif %}
{% endblock %}
