{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="banner">
    <div class="container">
    <img  width="400" height="200" src="{{ asset('images/' ~ categorie.image )}}">
				
				<div class="col-md-6 w3_agile_about_grid_right">
				<p><span>	{{categorie.nom}}</span></p>
                   
                  <p><span>  {{categorie.description}} </span></p>
				</div>
                
</div>
    
     {% for album in categorie.albums %}

                        
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="display-6">
                                <i class="fa fa-podcast mx-3"></i>
                  <a href="/album/{{album.id}}" >  {{album}}</a>
                            </span>
                            
                        </li>
                        {% endfor %}

    <a href="{{ path('categorie_index') }}">back to list</a>

    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
{% if is_granted('ROLE_ADMIN') %}   
 {{ include('categorie/_delete_form.html.twig') }}
 {% endif %}
{% endblock %}
